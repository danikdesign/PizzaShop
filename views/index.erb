<div class="container text-center">
  <div class="col">
    <div class="row row-cols-1 row-cols-md-1 g-1">
      <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="carousel-caption d-none d-md-block">
              <h2>Taste the best pizza delivery </h2>
              <p>We'll make your favorite pizza for you. Right here. And right now</p>
            </div>
            <img src="/images/your_pizza.png" class="d-block w-100" alt="welcome!">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row row-cols-1 row-cols-md-4 g-1">

    <% @products.each do |product| %>

      <div class="col">
        <div class="card">
          <div class="p-3">
            <img src="<%= product.path_to_image %>" class="card-img-top" alt="pizza_pic">
            <div class="card-body">
              <h5 class="card-title"><%= product.title %></h5>
              <p class="card-text"><%= product.description %></p>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Size: <%= product.size %> cm</li>
                <li class="list-group-item">Price: <%= product.price %> UAH</li>
              </ul>
              <a href="/" class="btn btn-outline-primary" onclick="add_to_cart(<%= product.id %>)">Add to cart</a>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>